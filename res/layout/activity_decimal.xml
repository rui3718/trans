<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#AAAAAA"
    tools:context="rui.app.transcalc.DecimalActivity">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/display"
        android:padding="0dp"
        >
        
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:prompt="@string/prompt"
            />

        <EditText
            android:id="@+id/numDisplay"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:textSize="30sp"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:maxLength="9">

            <requestFocus />
        </EditText>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:padding="0dp">

        <TextView
            android:id="@+id/num_7"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="45dp"
            android:padding="0dp"
            android:background="@drawable/up"
            android:gravity="center|center_vertical"
            android:clickable="true"
			/>
        <TextView
            android:id="@+id/num_8"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="8"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="45dp"
            android:padding="0dp"
            android:background="@drawable/up"
            android:gravity="center|center_vertical"
            android:clickable="true"
			/>
        <TextView
            android:id="@+id/num_9"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="45dp"
            android:padding="0dp"
            android:background="@drawable/up"
            android:gravity="center|center_vertical"
            android:clickable="true"
			/>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        > 
        <TextView
            android:id="@+id/num_4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="45dp"
            android:padding="0dp"
            android:background="@drawable/up"
            android:gravity="center|center_vertical"
            android:clickable="true"
			/>
        <TextView
            android:id="@+id/num_5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="45dp"
            android:padding="0dp"
            android:background="@drawable/up"
            android:gravity="center|center_vertical"
            android:clickable="true"
			/>
        <TextView
            android:id="@+id/num_6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="45dp"
            android:padding="0dp"
            android:background="@drawable/up"
            android:gravity="center|center_vertical"
            android:clickable="true"
			/>
   </LinearLayout>
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        >
        <TextView
            android:id="@+id/num_1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="45dp"
            android:padding="0dp"
            android:background="@drawable/up"
            android:gravity="center|center_vertical"
			/>
        <TextView
            android:id="@+id/num_2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="45dp"
            android:padding="0dp"
            android:background="@drawable/up"
            android:gravity="center|center_vertical"
            android:clickable="true"
			/>
        <TextView
            android:id="@+id/num_3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="45dp"
            android:padding="0dp"
            android:background="@drawable/up"
            android:gravity="center|center_vertical"
            android:clickable="true"
			/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        >
        <TextView
            android:id="@+id/num_0"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="45dp"
            android:padding="0dp"
            android:background="@drawable/up"
            android:gravity="center|center_vertical"
            android:clickable="true"
			/>
        <TextView
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="C"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="45dp"
            android:padding="0dp"
            android:background="@drawable/up"
            android:gravity="center|center_vertical"
            android:clickable="true"
            android:onClick="clear"
			/>
        <TextView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Del"
            android:textSize="45dp"
            android:padding="0dp"
            android:background="@drawable/up"
            android:gravity="center|center_vertical"
            android:clickable="true"
            android:onClick="delete"
			/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        >
        <TextView
            android:id="@+id/trans"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="50dp"
            android:padding="0dp"
            android:background="@drawable/up"
            android:gravity="center|center_vertical"
            android:clickable="true"
            android:onClick="trans"
            android:text="@string/convert"/>
    </LinearLayout>
    
</LinearLayout>

